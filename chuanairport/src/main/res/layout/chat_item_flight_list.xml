<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat_item_flight_list"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/bg_chat_item_flight_list"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/tv_from_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="深圳"
            android:textSize="25sp"
            android:layout_alignParentStart="true"
            />


        <ImageView
            android:id="@+id/img_right_point"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toEndOf="@id/tv_from_city"
            android:layout_toRightOf="@id/tv_from_city"
            android:src="@drawable/right_ponit"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />
        <TextView

            android:id="@+id/tv_arrive_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京"
            android:textSize="25sp"

            />


    </LinearLayout>
    <RadioButton
        android:id="@+id/tv_has_choise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:visibility="gone"
        />

</LinearLayout>