<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ubtech.airport.ibm.MainActivity">
    <ImageView
        android:visibility="visible"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/robot_bg"/>
    <ScrollView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/step_1"
                android:text="介绍下自己"/>
            <Button
                android:visibility="visible"
                android:id="@+id/step_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="唱一首歌"/>
            <Button
                android:visibility="visible"
                android:id="@+id/step_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="进入猜歌环节"/>
            <Button
                android:visibility="visible"
                android:id="@+id/step_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="小朋友的答案是"/>
            <Button
                android:visibility="visible"
                android:id="@+id/step_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="在唱一首"/>
            <Button
                android:visibility="visible"
                android:id="@+id/step_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="进入第二轮竞猜"/>
            <Button
                android:visibility="visible"
                android:id="@+id/step_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="小盆友答案是"/>
            <Button
                android:visibility="visible"
                android:id="@+id/step_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="给我们跳个舞"/>
            <Button
                android:visibility="visible"
                android:id="@+id/step_9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="教我们跳舞"/>
            <Button
                android:visibility="visible"
                android:id="@+id/step_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="开始提问"/>
            <Button
                android:visibility="visible"
                android:id="@+id/step_11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="答案是第四楼"/>
            <Button
                android:visibility="visible"
                android:id="@+id/step_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="答案是红色"/>
            <Button
                android:visibility="visible"
                android:id="@+id/dance1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="舞蹈1"/>
            <Button
                android:visibility="visible"
                android:id="@+id/dance2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="舞蹈2"/>
            <Button
                android:visibility="visible"
                android:id="@+id/dance3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="舞蹈3"/>
            <Button
                android:visibility="visible"
                android:id="@+id/dance4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="舞蹈4"/>
            <Button
                android:visibility="visible"
                android:id="@+id/dance5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="舞蹈5"/>
            <Button
                android:visibility="visible"
                android:id="@+id/dance6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="舞蹈6"/>
            <Button
                android:visibility="visible"
                android:id="@+id/dance7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="舞蹈7"/>
            <Button
                android:visibility="visible"
                android:id="@+id/dance8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="舞蹈8"/>
            <Button
                android:visibility="visible"
                android:id="@+id/dance9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="舞蹈9"/>
            <Button
                android:visibility="visible"
                android:id="@+id/dance10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="舞蹈10"/>
            <Button
                android:visibility="visible"
                android:id="@+id/dance11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="舞蹈11"/>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/listener"
        android:layout_gravity="center"
        android:background="#00000000"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <Button
        android:visibility="visible"
        android:id="@+id/to_adim"
        android:layout_gravity="top|right"
        android:background="#00000000"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_statu"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="管理员"
        android:textColor="#ffffff"/>
</FrameLayout>

